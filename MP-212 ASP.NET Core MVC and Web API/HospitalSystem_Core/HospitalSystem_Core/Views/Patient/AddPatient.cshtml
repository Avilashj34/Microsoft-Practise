@model HospitalSystem_Core.ViewModels.PatientVm

<head>
    <title>Add Patient</title>
    <style>
        .form-group .col-sm-10{
            width: auto;
        }
    </style>
</head>

<h2>AddPatient</h2>
<h1>
    @ViewBag.Message
</h1>
<hr />

<section class="content container-fluid">
    <!-- Horizontal Form -->
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Add Doctor</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal" method="post" action="AddPatient">
            <div class="box-body">
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="Name" placeholder="Name">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Phone</label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" name="Phone" placeholder="Email">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputGender" class="col-sm-2 control-label">Gender</label>
                    <div class="col-sm-10" style="padding-top:5px">
                        <input type="radio" name="Gender" value="male" placeholder="Gender">Male
                        <input type="radio" name="Gender" value="female" placeholder="Gender">Female
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">HealthCondition</label>
                    <div class="col-sm-10">
                        <input type="radio" name="HealthCondition" value="high" placeholder="Gender">High
                        <input type="radio" name="HealthCondition" value="normal" placeholder="Gender">Normal
                        <input type="radio" name="HealthCondition" value="medium" placeholder="Gender">Medium                        
                    </div>
                </div>
                
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <button type="submit" class="btn btn-default">Cancel</button>
                <button type="submit" class="btn btn-info pull-right">Create</button>
            </div>
            <!-- /.box-footer -->
        </form>
    </div>
    <!-- /.box -->
</section>
<div>
    <a asp-action="Index">Back to List</a>
</div>

